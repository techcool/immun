
{% comment %}
Sticky Title Flex Gallery Section
{% endcomment %}

<section 
  class="sticky-flex-gallery {{ section.settings.custom_class }}" 
  style="
    background-color: {{ section.settings.background_color }};
    {% if section.settings.background_image != blank %}
      background-image: url({{ section.settings.background_image | image_url }});
      background-size: cover;
      background-position: center;
    {% endif %}
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  "
>
  <div class="container page-width">
    <!-- Sticky Title -->
    <div class="sticky-title">
      <h2 style="color: {{ section.settings.title_color }}">{{ section.settings.title_text }}</h2>
      <p style="color: {{ section.settings.subtitle_color }}">{{ section.settings.subtitle_text }}</p>
    </div>

    <!-- Image Gallery -->
    <div class="image-gallery-wrap">
      {% for block in section.blocks %}
        <div class="gallery-image">
          <a href="{{ block.settings.link }}" class="image-item">
            <img 
              src="{{ block.settings.image | image_url: width: 1000 }}" 
              alt="{{ block.settings.image.alt | escape }}" 
              loading="lazy"
            >
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sticky Title Flex Gallery",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class",
      "default": "custom-section"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#8a8445"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title_text",
      "label": "Title",
      "default": "Almond Milk Bread & Japanese Pastry"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle",
      "default": "A moist, fluffy bread with a mellow flavor."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Padding Top Desktop (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Padding Bottom Desktop (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Sticky Title Flex Gallery",
      "category": "Custom"
    }
  ]
}
{% endschema %}

